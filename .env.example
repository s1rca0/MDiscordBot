# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Discord bot token from Discord Developer Portal
DISCORD_BOT_TOKEN=your_bot_token_here

# Optional: Command prefix (default: !)
COMMAND_PREFIX=!

# Optional: Enable debug mode (default: False)
DEBUG_MODE=False

# Optional: Maximum message length (default: 2000)
MAX_MESSAGE_LENGTH=2000

# Optional: Default embed color in hex (default: 0x3498db)
DEFAULT_EMBED_COLOR=0x3498db

# Optional: Logging level (default: INFO)
LOG_LEVEL=INFO

# Optional: Log file name (default: bot.log)
LOG_FILE=bot.log
